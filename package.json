{
  "repository": "https://github.com/vercel/examples.git",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.1.0",
    "@commitlint/config-conventional": "^19.1.0",
    "eslint": "^8.28.0",
    "eslint-config-turbo": "latest",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "turbo": "^1.8.3",
    "typescript": "^5.4.2"
  },
  "dependencies": {
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "vitest related --run --bail",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier -w"
    ]
  }
}
